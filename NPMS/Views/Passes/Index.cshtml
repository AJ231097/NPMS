@model IEnumerable<NPMS.Models.Passes>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager;
@{
    ViewData["Title"] = "Index";
}

<h1>Passes</h1>
<h2>All prices are in USD</h2>
 @if (User.IsInRole("Admins"))
 {

 
<p>
    <a asp-action="Create">Add new Pass</a>
</p>
 }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PassName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassPrice)
            </td>
            
                @if (User.IsInRole("Admins"))
                {


                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            }
        </tr>
}
    </tbody>
</table>
