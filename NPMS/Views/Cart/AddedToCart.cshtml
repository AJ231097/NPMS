@{
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Your Cart</title>
    </head>
    <body>

        <h3>Cart Page</h3>
        <table cellpadding="2" cellspacing="2" border="1">
            <tr>
                <th>ID</th>
                <th>Pass Price</th>
                <th>Total Price</th>
            </tr>

            @foreach (var item in ViewBag.cart)
            {
                <tr>
                    <form method="post" asp-action="Remove" asp-controller="Cart" asp-route-ProductId="@item.Id">
                        <input type="submit" value="Remove from cart">
                    </form>
                    <td>@item.Id</td>

                    <td>@item.PassPrice</td>
                </tr>

            }
            <tr>
                Total is @ViewBag.total
            </tr>


        </table>
        <br>


    </body>
    </html>
}

<a asp-action="Index" asp-controller="Cart">Keep Shopping</a>
<a asp-action="Checkout" asp-controller="Checkout">Checkout</a>