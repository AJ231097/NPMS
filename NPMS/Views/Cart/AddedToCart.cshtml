@{
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Your Cart</title>
    </head>
    <body>

        <h3>Cart Page</h3>
        <table>
            <tr>
                <th>ID</th>
                <th>Pass Price</th>
                <!--<th>Total Price</th>-->
            </tr>

            @foreach (var item in ViewBag.cart)
            {
                <tr>

                    <td>@item.Id</td>

                    <td>@item.PassPrice</td>

                    <!--<td>@ViewBag.total</td>-->
                    <td>
                        <form method="post" asp-action="Remove" asp-controller="Cart" asp-route-Id="@item.Id">
                            <input type="submit" value="Remove from cart">
                        </form>
                    </td>
                </tr>

            }
            <br>
            <td><b>Total Price is</b> @ViewBag.total

    </td>


        </table>
        <br>


    </body>
    </html>
}

<a asp-action="Index" asp-controller="Cart">Keep Shopping</a>
<a asp-action="Checkout" asp-controller="Checkout">Checkout</a>